# Server
PORT=4000
NODE_ENV=development

# Database (MySQL)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=freemart_dev
DB_USER=freemart_user
DB_PASSWORD=changeme

# JWT / Auth
JWT_SECRET=change_this_jwt_secret
JWT_EXPIRES_IN=7d

# Redis (for queues/workers)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Media storage
MEDIA_STORAGE=local         # local | s3
MEDIA_LOCAL_PATH=./uploads

# AWS S3 (if using s3)
AWS_S3_BUCKET=
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# AI provider (for request analysis)
AI_PROVIDER=openai          # openai | local | other
AI_API_KEY=your_api_key_here

# USSD provider
USSD_PROVIDER=example      # e.g., africastalking, twilio
USSD_API_KEY=
USSD_API_SECRET=

# Third-party
LOG_LEVEL=info
